<div class="container">
	<div class="text-center">
		<h1>Add New Band</h1>
	</div>
		<div class="text-center">

			<%= bootstrap_form_for(@band, layout: :vertical) do |f|%>
				<label><%= f.text_field :name %></label>
				<label><%= f.text_field :genre %></label>
				<label><%= f.text_field :explicit_lyrics %></label>
		<div class="text-center">
			<%= submit_tag "Add" %>
		</div>
		<% end %>
	</div>
</div>